<main>
  <h1><%= title %></h1>
  <p>Welcome to the inventory management system. Use the links below to manage inventory data.</p>

  <!-- Flash message section -->
  <% if (locals.message) { %>
    <div class="flash-message">
      <p><%= message %></p>
    </div>
  <% } %>

  <!-- Management links -->
  <ul>
    <li><a href="/inv/add-class">Add New Classification</a></li>
    <li><a href="/inv/add-inv">Add New Inventory</a></li>
  </ul>

  <h2>Manage Inventory</h2>
  <p>choose a classification to see those inventory items.</p>
  <%- classificationSelect %>

  <table id="inventoryDisplay"></table>

  <noscript>Javascript must be enabled to use this page</noscript>

  <script src="../../js/inventory.js"></script>
</main>
